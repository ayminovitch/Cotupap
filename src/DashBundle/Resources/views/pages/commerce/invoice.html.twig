 <div class="row">
        <div class="col-lg-12">
            <div class="card px-2">
                <div class="card-body">
                    <div class="container-fluid">
                        <h3 class="text-right mb-4"></h3>
                        <hr>
                    </div>
                    <div class="container-fluid d-flex justify-content-between">
                        <div class="col-lg-3 pl-0">
                            <p class="mt-2 mb-2"><b>Cotupap</b></p>
                            <p>BP 241-1080, <br>Tunis Cedex.</p>
                        </div>
                        <div class="col-lg-3 pr-0">
                            <p class="mt-2 mb-2 text-right"><b>Devis pour</b></p>
                            <p class="text-right">{{ client['name'] }}, <br>{{ client['phone'] }}<br> {{ client['shipping'] }}</p>
                        </div>
                    </div>
                    <div class="container-fluid d-flex justify-content-between">
                        <div class="col-lg-3 pl-0">
                            <p class="mb-0 mt-2">Date de facturation : 23rd Jan 2020</p>
                            <p>Date d'échéance : 25th Jan 2020</p>
                        </div>
                    </div>
                    <div class="container-fluid mt-2 d-flex justify-content-center w-100">
                        <div class="table-responsive w-100">
                            <table class="table">
                                <thead>
                                <tr class="bg-light">
                                    <th>#</th>
                                    <th class="text-left">Article</th>
                                    <th class="text-left">Quantité</th>
                                    <th class="text-left">Prix Unitaire</th>
                                    <th class="text-left">Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in items %}
                                <tr class="text-left">
                                    <td class="text-left">{{ item['reference'] }}</td>
                                    <td>{{ item['name'] }}</td>
                                    <td>{{ item['qte'] }}</td>
                                    <td>{{ item['prix'] }} TND</td>
                                    <td>{{ item['totalSingle'] }} TND</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="container-fluid mt-5 w-100">
                        <p class="text-right mb-2">Sous - Total: {{ somme }}</p>
                        <p class="text-right">livraison : {{ livraison }} TND</p>
                        <h4 class="text-right mb-5">Total : {{ total }} TND</h4>
                        <hr>
                    </div>
                    <div class="container-fluid w-100">
{#                        <a href="#" class="btn btn-primary float-right mt-4 ml-2"><i class="icon-printer mr-1"></i>Print</a>#}
                        <a href="{{ path('dash_homepage') }}" class="btn btn-success float-right mt-4"><i class="icon-action-redo mr-1"></i>Page d'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>