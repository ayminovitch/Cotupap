<div class="cart dynamic-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <table class="table table-cart table-mobile">
                    <thead>
                    <tr>
                        <th>Article</th>
                        <th>Prix</th>
                        <th>Qte</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody id="basket-body">
                    {% for item in items %}
                        <tr class="panda" data-ref="{{ item['reference'] }}">
                            <td class="product-col">
                                <div class="product">
                                    <figure class="product-media">
                                        <a href="javascript:void(0)">
                                            <img src="https://via.placeholder.com/60x60.png?text=Article+Cotupap" alt="{{ item['reference'] }}">
                                        </a>
                                    </figure>

                                    <h3 class="product-title">
                                        <a href="#">{{ item['name'] }}</a>
                                    </h3><!-- End .product-title -->
                                </div><!-- End .product -->
                            </td>
                            <td class="price-col">{{ item['totalSingle'] / item['qte'] }} DT</td>
                            <td class="quantity-col">
                                <div class="cart-product-quantity">
                                    <input type="number" class="qte form-control" value="{{ item['qte'] }}" min="1" max="10" step="1" data-decimals="0" required>
                                </div><!-- End .cart-product-quantity -->
                            </td>
                            <td class="total-col">{{ item['totalSingle'] }} DT</td>
                            <td class="remove-col"><button class="btn-remove"><i class="icon-close"></i></button></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table><!-- End .table table-wishlist -->

                <div class="cart-bottom">
                    <div class="cart-discount">
                        <form action="#">
                            <div class="input-group">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary-2" onclick="updateBasket()" type="submit"><i class="icon-long-arrow-right"></i></button>
                                </div><!-- .End .input-group-append -->
                            </div><!-- End .input-group -->
                        </form>
                    </div><!-- End .cart-discount -->

                    <a href="#" class="btn btn-outline-dark-2"><span>MISE Ã€ JOUR PANIER</span><i class="icon-refresh"></i></a>
                </div><!-- End .cart-bottom -->
            </div><!-- End .col-lg-9 -->
            <aside class="col-lg-3">
                <div class="summary summary-cart">
                    <h3 class="summary-title">Total du panier</h3><!-- End .summary-title -->

                    <table class="table table-summary">
                        <tbody>
                        {#                                <tr class="summary-subtotal">#}
                        {#                                    <td>Subtotal:</td>#}
                        {#                                    <td>160.00 Dt</td>#}
                        {#                                </tr><!-- End .summary-subtotal -->#}

                        <tr class="summary-total">
                            <td>Total:</td>
                            <td>{{somme}} DT</td>
                        </tr><!-- End .summary-total -->
                        </tbody>
                    </table><!-- End .table table-summary -->

                    <a href="javascript:void(0)" class="btn btn-outline-primary-2 btn-order btn-block">Confirmer</a>
                </div><!-- End .summary -->

                <a href="{{ path('dash_homepage') }}" class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUER VOS ACHATS</span><i class="icon-refresh"></i></a>
            </aside><!-- End .col-lg-3 -->
        </div><!-- End .row -->
    </div><!-- End .container -->
</div><!-- End .cart -->