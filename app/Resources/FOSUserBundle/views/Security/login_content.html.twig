{% trans_default_domain 'FOSUserBundle' %}
<div class="auto-form-wrapper">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="form-group">
            <label class="label">Nom d'utilisateur</label>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nom d'utilisateur" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username">
                <div class="input-group-append">
                    <span class="input-group-text"><i class="icon-check"></i></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="label">Mot de passe</label>
            <div class="input-group">
                <input type="password" class="form-control" placeholder="*********" id="password" name="_password" required="required" autocomplete="current-password">
                <div class="input-group-append">
                    <span class="input-group-text"><i class="icon-check"></i></span>
                </div>
            </div>
        </div>
        <div class="form-group d-flex justify-content-between">
            <div class="form-check form-check-flat mt-0">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" >
                    Gardez-moi connecté
                    <i class="input-helper"></i></label>
            </div>
            <a href="{{ path('fos_user_resetting_request') }}" class="text-small forgot-password text-black">Mot de passe oublié</a>
        </div>
        <div class="form-group">
            <button class="btn btn-primary submit-btn btn-block" type="submit" id="_submit" name="_submit">Connectez</button>
        </div>
    </form>
</div>
